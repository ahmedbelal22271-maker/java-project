            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="370.0" layoutY="182.0" text="email :" />
      <Label fx:id="emailLabel" layoutX="434.0" layoutY="182.0" text="Label" />
      <Label layoutX="371.0" layoutY="213.0" prefHeight="18.0" prefWidth="90.0" text="phone number :" />
      <Label fx:id="phoneNumberLabel" layoutX="471.0" layoutY="213.0" text="Label" />
