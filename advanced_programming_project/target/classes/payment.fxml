      <Label layoutX="51.0" layoutY="268.0" text="Payment method">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <RadioButton fx:id="creditCardRadioButton" layoutX="25.0" layoutY="306.0" mnemonicParsing="false" text="credit card">
