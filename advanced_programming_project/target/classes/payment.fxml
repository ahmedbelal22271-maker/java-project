      <Label fx:id="licenseLabel" layoutX="471.0" layoutY="152.0" text="Label" />
      <Button fx:id="returnButton" layoutX="530.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleReturnButton" text="RETURN" />
      <Label fx:id="invalidCreditCardLabel" layoutX="450.0" layoutY="315.0" text="Invalid Credit Card" textFill="RED" />
      <Label fx:id="paymentSuccessfulLabel" layoutX="448.0" layoutY="315.0" text="Payment Successful" textFill="#28e437" />
      <Label fx:id="provideAMethodLabel" layoutX="28.0" layoutY="351.0" text="Please Provide a Payment Method" textFill="#ea0000" />
