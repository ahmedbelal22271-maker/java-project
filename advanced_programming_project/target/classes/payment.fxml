<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.advanced_programming_project.PaymentController">
   <children>
      <Label layoutX="64.0" layoutY="113.0" prefHeight="32.0" prefWidth="130.0" text="price summary ">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
